
$primary   = #066ab1
$secondary = #5698e3
$accent    = #451e5f
$dark      = #004081
$positive  = #3cac3d
$negative  = #cc2726
$info      = #3871c1
$warning   = #e9ba1a
$light     = #bdbdbd
$faded     = #e1e2e1
$petecavermelho  = $negative
$petecaamarelo   = $warning
$petecaazul      = $info 
$petecaverde     = $positive
$background-cinza = #e1e2e1
$input-text-color   = $primary;
$input-label-color  = $accent;
$generic-border-radius    = 3px;
$body-font-size          ?= 15px
$quasar-dont-import-fonts = true;


.bg-cinza
  background: $faded !important

.texto-cinza
  color: $faded !important 

.bg-light
  background-color: $light !important

.bg-dark
  background-color: $dark !important

.bg-petecavermelho
  background-color: $petecavermelho !important;

.texto-vermelho
  color: $petecavermelho !important;

.bg-petecaamarelo
  background-color: $petecaamarelo !important;

.texto-amarelo
  color: $petecaamarelo !important;

.bg-petecaazul
  background-color: $petecaazul !important;

.texto-azul
  color: $petecaazul !important;

.bg-petecaverde
  background-color: $petecaverde !important;

.texto-verde
  color: $petecaverde !important;

.active-link-pat
  background-color: $primary
  color: #fff !important

.wordbreak
  word-break: break-all !important;

.tag
  padding: 10px;
  font-size: 15px;
  text-decoration: none;
  background-color: aliceblue;

.head
  background-color: #fff;
  border-bottom-color : 5px #FADFFA;
  background-image: url("data:image/svg+xml,%3Csvg width='6' height='6' viewBox='0 0 6 6' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23623d9c' fill-opacity='0.39' fill-rule='evenodd'%3E%3Cpath d='M5 0h1L0 6V5zM6 5v1H5z'/%3E%3C/g%3E%3C/svg%3E");
  min-height:115px;
h1
  color: $text;
  text-shadow: -0.0075em 0.0075em 0 mix($light, $primary, 94%),
  0.005em 0.005em 0 mix($light, $primary, 60%),
  0.01em 0.01em 0 mix($light, $primary, 62%), 
  0.015em 0.015em mix($light, $primary, 64%), 
  0.02em 0.02em 0 mix($light, $primary, 66%), 
  0.025em 0.025em 0 mix($light, $primary, 68%),
  0.03em 0.03em 0 mix($light, $primary, 70%),
  0.035em 0.035em 0 mix($light, $primary, 72%);

.wp-block-image
  display: flex;
  align-items: center;
  justify-content: center;


.wp-block-video
  display: flex;
  align-items: center;
  justify-content: center;

.wp-block-video > video 
  width: 80%

.wp-block-group
  font-size : 20px;

.font-post
  font-size : 18px
  text-justify : inter-word;

.wp-block-quote
  margin: 1.5em 0;
  padding-left: 1.25em;
  border-left: 4px solid;
  border-color: $accent;
  border-color: $accent;
  color: $dark;
  color: $dark;
  font-size: 20px;
  font-size: 1.125rem;

.has-text-align-center
  text-align: center !important;

.q-field__bottom
  color: rgb(32 124 39) !important;
  font-weight: bold !important;

.q-tabs__arrow--right
  top: 0;
  right: 0;
  bottom: 0;
  color: $text-color;
  background-color: $accent !important;

.q-tabs__arrow--left
  top: 0;
  right: 0;
  bottom: 0;
  color: $text-color;
  background-color: $accent !important;

.q-tabs__arrow--faded
  display: none;



$headings ?= {
  h1: {
    size: 4rem,
    line-height: 4rem,
    weight: 400,
    letter-spacing: -.01362em
  },
  h2: {
    size: 3.5rem,
    line-height: 3.5rem,
    letter-spacing: -.00833em,
    weight: 400
  },
  h3: {
    size: 3rem,
    line-height: 3.125rem,
    letter-spacing: normal,
    weight: 500
  },
  h4: {
    size: 2.125rem,
    line-height: 2.5rem,
    letter-spacing: .00735em,
    weight: 500
  },
  h5: {
    size: 1.5rem,
    line-height: 2rem,
    letter-spacing: normal,
    weight: 500
  },
  h6: {
    size: 1.25rem,
    line-height: 1.75rem,
    letter-spacing: .0125em,
    weight: 500
  },
  subtitle1: {
    size: 1rem,
    line-height: 1.75rem,
    letter-spacing: .00937em,
    weight: 500
  },
  subtitle2: {
    size: .870rem,
    line-height: 1.375rem,
    letter-spacing: .00714em,
    weight: 500
  },
  body1: {
    size: 1rem,
    line-height: 1.5rem,
    letter-spacing: .03125em,
    weight: 400
  },
  body2: {
    size: .875rem,
    line-height: 1.25rem,
    letter-spacing: .01786em,
    weight: 400
  },
  overline: {
    size: .75rem,
    line-height: 2rem,
    letter-spacing: .16667em,
    weight: 500
  },
  caption: {
    size: .75rem,
    line-height: 1.25rem,
    letter-spacing: .03333em,
    weight: 700
  }
}

$h-tags ?= {
  h1: $headings.h1,
  h2: $headings.h2,
  h3: $headings.h3,
  h4: $headings.h4,
  h5: $headings.h5,
  h6: $headings.h6
}

$text-weights ?= {
  thin: 300,
  light: 300,
  regular: 400,
  medium: 500,
  bold: 700,
  bolder: 700
}

$typography-font-family         ?= 'Ubuntu', '-apple-system', Helvetica, Arial, sans-serif
$toolbar-min-height             ?= 60px

.title-page-tipos
  font-family: 'Lato', sans-serif, cursive;
  font-weight: 700 !default;
  padding-bottom : 5px;
  border-bottom: 4px double $accent;
  font-display: swap;

body
  font-family: $typography-font-family;
  font-weight: 500 !default;
  font-size : 16px;
  font-display: swap;
  color: #263238;

@import '~quasar/src/css/variables.styl'
